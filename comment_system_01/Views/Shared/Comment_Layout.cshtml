
@{
    ViewBag.Title = "Comment_Layout";
}

<h2>Comment_Layout</h2>

<head>
    <meta charset=utf-8>
    <meta name=description content="">
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title>Jquery Comments Plugin</title>
    <!-- Styles -->
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-comments.css">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <!-- Data -->
    <script type="text/javascript" src="~/Scripts/comments-data.js"></script>

    <!-- Libraries -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.textcomplete/1.8.0/jquery.textcomplete.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-comments.js"></script>

    <style type="text/css">
        body {
            padding: 20px;
            margin: 0px;
            font-size: 14px;
            font-family: "Arial", Georgia, Serif;
        }
    </style>

    <!-- Init jquery-comments -->
    <script type="text/javascript">
			$(function() {
				
				$('#comments-container').comments({
					profilePictureURL: 'https://viima-app.s3.amazonaws.com/media/public/defaults/user-icon.png',
					currentUserId: 1,
					roundProfilePictures: true,
					textareaRows: 1,
					enableAttachments: true,
					enableHashtags: true,
					enablePinging: true,
					getUsers: function(success, error) {
						setTimeout(function() {
							success(usersArray);
						}, 500);
					},
					getComments: function(success, error) {
						setTimeout(function() {
							success(commentsArray);
						}, 500);
					},

				});
			});
    </script>

</head>